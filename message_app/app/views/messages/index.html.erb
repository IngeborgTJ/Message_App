<h1>List of Messages:</h1>

<table>
  <thead>
    <tr>
      <th>Name and Description:</th>
      <th>Priority:</th>
      <th>Date:</th>
       <th>Deadline and potential specifications of why deadline needed to be changed:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.name %></td>
        <td><%= message.priority %></td>
        <td><%= message.date %></td>
        <td><%= message.deadline %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Delete', message, method: :delete, data: { confirm: 'Are you sure want do the delete this message?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path %>
